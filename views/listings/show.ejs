<% layout("/layouts/boilerplate") -%>

<body class="bg-light">
  <div class="container my-4">
    <h3 class="fw-semibold mb-4">Listing Details</h3>

    <img 
      src="<%= listing.image %>" 
      alt="listing_image" 
      class="img-fluid rounded-4 mb-3"
      style="object-fit: cover; height: 350px; width: 100%; max-width: 700px;"
    />

    <h5 class="fw-bold mb-2"><%= listing.title %></h5>
    <p class="text-muted mb-3" style="max-width: 700px;"><%= listing.description %></p>
    <p class="fw-semibold mb-1">&#8377;<%= listing.price.toLocaleString("en-IN") %></p>
    <p class="mb-0"><%= listing.location %></p>
    <p class="text-muted mb-4"><%= listing.country %></p>

    <div class="d-flex gap-3">
      <a href="/listings/<%= listing._id %>/edit" class="btn btn-danger px-4">Edit</a>
      <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE" class="d-inline">
        <button class="btn btn-dark px-4">Delete</button>
      </form>
    </div>
  </div>
</body>
